<!DOCTYPE html>
<html>
<head>
  <title>Parent Signup</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>

<h2>Create Parent Account</h2>

<input id="first" placeholder="First name">
<input id="last" placeholder="Last name">
<input id="email" placeholder="Email">
<input id="pass" type="password" placeholder="Password">
<input id="confirm" type="password" placeholder="Confirm Password">

<button id="signupBtn">Create Account</button>

<script type="module">
  import { signup } from "./js/auth.js";
  import { supabase } from "./js/supabase.js";

  function familyKey() {
    return Math.random().toString(36).substring(2, 8).toUpperCase();
  }

  signupBtn.onclick = async () => {
    if (pass.value !== confirm.value) {
      alert("Passwords do not match");
      return;
    }

    const user = await signup(email.value, pass.value);
    const key = familyKey();

    await supabase.from("profiles").update({
      role: "parent",
      first_name: first.value,
      last_name: last.value,
      family_key: key
    }).eq("id", user.id);

    alert("Your family key: " + key);
    location.href = "parent-home.html";
  };
</script>

</body>
</html>
